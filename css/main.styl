view-padding=50px
border-color=#ccc
gray-text=#777
border-radius=11px
.media
	img
		float left
	div
		float left

.line
	overflow auto

.right
	float right

body
	background-color #fefefe
	width 640px
	height 920px
	outline 2px solid #ccc
	font-size 25px
	font-family helvetica
	color #111

ul
	list-style-type none
	margin-left 0

#z-app
	> div
		outline 1px dashed #ccc
		height 920px
	position relative
	//top -920px*2

.z-app
	position relative
	> div
		display none
		position absolute
		left 0
		top 0
		&.transition
			-webkit-transition: left .4s

		&.active
			display block


.tableWithCaption
	width 92%
	box-sizing border-box
	margin auto
	border-collapse separate
	caption
		text-align left
		background-color #eee
		padding 15px 20px
		border-top-left-radius border-radius
		border-top-right-radius border-radius
		border 2px solid border-color
		border-bottom none
		color gray-text
	td
		padding 16px 20px
		border=2px solid border-color
		border border
		&:first-child
			border-right none
		&:last-child
			border-left none
			text-align right
		
	tr:last-child
		td
			border-top none
			&:first-child
				border-bottom-left-radius border-radius
			&:last-child
				border-bottom-right-radius border-radius

.defList
	overflow auto
	border 2px solid border-color
	border-radius border-radius
	width 92%
	margin auto

	dt, dd
		&:not(:last-of-type)
			border-bottom 2px solid border-color
		width 50%
		display block
		box-sizing border-box
		padding 16px 20px

	dt
		float left
		clear left
		font-weight bold
	dd
		float right
		text-align right
	margin-bottom 20px

.loginView
	width 100%
	box-sizing border-box
	padding 50px
	.logo
		//width 130px
	.app-name
		color #555
		position relative
		top 16px
		font-size 35px
		margin-left 24px
	input
		width 100%
		box-sizing border-box
		border-radius 9px
		line-height 2
		margin-top 12px
		text-indent 13px
	button
		float right
		background-image url(../images/button.png)
		background-repeat no-repeat
		border none
		width 216px
		height 77px
		margin-top 16px


.accountListView
	width 100%
	box-sizing border-box
	padding 0
	.cardsTitle, .accountsTitle
		webkit-user-select none
		font-size 18px
		color #666
		padding 20px
		background-image: linear-gradient(top, rgb(215,215,217) 0%, rgb(152,152,156) 100%);
		background-image: -o-linear-gradient(top, rgb(215,215,217) 0%, rgb(152,152,156) 100%);
		background-image: -moz-linear-gradient(top, rgb(215,215,217) 0%, rgb(152,152,156) 100%);
		background-image: -webkit-linear-gradient(top, rgb(215,215,217) 0%, rgb(162,162,166) 100%);
		background-image: -ms-linear-gradient(top, rgb(215,215,217) 0%, rgb(152,152,156) 100%);
	.card, .account
		-webkit-user-select none
		height 90px
		display -webkit-box
		-webkit-box-pack center
		padding 0 20px
		&.active-state
			background-color #eee
		>*
			height 90px
		//&:not(:last-child)
		border-bottom 1px solid #bbb
		>.col-left
			display -webkit-box
			-webkit-box-flex 2
			-webkit-box-orient vertical
			-webkit-box-pack justify
			box-sizing border-box
			padding 15px 0
			.status
				color #bbb
				font-size 18px
			.cardNumber, .accountNumber
				font-weight bold

		>.col-right
			-webkit-box-flex 1
			display table-row
			.total
				display table-cell
				vertical-align middle
				text-align right
				padding-right 15px

.cardView
	.overview
		@extends .defList

	
	.latestTransactions
		@extends .tableWithCaption
		
		.transaction
			&.active-state
				background-color #eee

.accountView

	.overview
		@extends .defList

	.latestInvoices
		width 92%
		margin auto


		border 2px solid border-color
		border-collapse separate
		border-radius border-radius
		caption
			text-align left
			margin-top 10px
			margin-bottom 20px
			margin-left 20px
		
		.invoiceRow:not(:last-child)
			td
				border-bottom 2px solid border-color
		.invoice
			
			div:nth-child(2n+1)
				margin-bottom 10px
			padding 20px
			font-size 0.8em
			-webkit-column-count 3
			label
				font-weight bold
			label, span
				display block
		
	.navigation
		display -webkit-box
		position fixed
		bottom 0px
		left 0px
		-webkit-box-pack justify
		-webkit-box-align center
		background-color black
		height 3rem

		li
			width 50%
			text-align center
			color white
			

			
.transactionView
	.transactionDetail
		@extends .defList
	
			
				
			
[data-widget="navigationBar"], [data-widget-type="navigationBar"]
	background-image -webkit-linear-gradient(top, #555 0%, #2c2c2c 50%, #161616 51%, #161616 100%);
	nav-height=4rem
	height nav-height
	line-height nav-height
	padding-left 2rem
	padding-right 2rem
	.title
		color white
	
	-webkit-box-align center

	display -webkit-box
	.leftSection, .rightSection
		width 150px
		button
			display -webkit-box
		
	.middleSection
		text-align center
		-webkit-box-flex 1

[data-widget="cardChooser"], [data-widget-type="cardChooser"]
	background-image -webkit-linear-gradient(top, #bdbdc1 0%, #dcdcde 100%)

.backButton
	button-background=-webkit-linear-gradient(top, #888 -4%, #2C2C2C 50%, #161616 51%, #161616 100%)
	button-border=1px solid #333
	background-image button-background //url(/images/back-left.png), url(/images/back-right.png), url(/images/middle.png)
	color white
	border none
	background-clip padding-box, padding-box, border-box
	background-position 0px 0px, right center, 7px 0px
	background-repeat no-repeat, no-repeat, repeat-x
	height 40px
	text-indent .8rem
	padding-right 20px
	font-size 1rem
	position relative
	z-index 0
	border button-border
	border-radius 4px

	&::before
		content ""
		position absolute
		z-index -1
		left -14px
		bottom 5px
		height 28px
		width 28px
		border none
		border-radius 4px
		border-top-left-radius 3px
		border-left button-border
		border-bottom button-border
		background-image -webkit-linear-gradient(top left, #888 0%, #2C2C2C 50%, #161616 51%, #161616 100%)
		-webkit-transform rotate(45deg)


[data-widget="selector"], [data-widget-type="selector"]
	.select-button
		width 20px

.cardChooser
	padding-left 2rem
	padding-right 2rem
	margin auto
	margin-bottom 1rem
	height 4rem
	font-size 1.2rem
	line-height 4rem
	color #555
	.cardNumber
		float left
	.total
		float right
		color gray

[data-widget]
	display none
